@model MIST353WeatherWebsite.Pages.LocationCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Location) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LocationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LocationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LocationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
